{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noEmitOnError": false,
    "jsx": "preserve",
    "typeRoots": [
      "./src/types/definations.d.ts",
      "./node_modules/@types"
    ],
    "plugins": [
      {
        "transform": "typescript-plugin-styled-components",
        "type": "config",
        "minify": true,
        "ssr": true,
        "displayName": true,
        "fileName": true,
        "preprocess": false
      }
    ]
  },
  "include": [
    "src",
    "index.js",
    "src/lib/logger.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vscode"
  ]
}
